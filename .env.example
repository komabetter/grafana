# Grafana Domain Configuration
GRAFANA_DOMAIN=uat.log.manus-skill.com
GRAFANA_ROOT_URL=https://uat.log.manus-skill.com

# Let's Encrypt Configuration
LETSENCRYPT_EMAIL=info@macode-solution.com

# Grafana Authentication
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ALLOW_SIGN_UP=false
GRAFANA_ANONYMOUS_ENABLED=false

# Port Configuration (internal use only, not exposed directly)
GRAFANA_PORT=3000
LOKI_PORT=3100

# User/Group IDs (adjust based on your system)
GRAFANA_USER_ID=472
GRAFANA_GROUP_ID=0
LOKI_USER_ID=10001
LOKI_GROUP_ID=10001

# Data Paths
GRAFANA_DATA_PATH=./data/grafana
LOKI_DATA_PATH=./data/loki

# Docker Settings
RESTART_POLICY=unless-stopped

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40

# Network Settings
PROXY_NETWORK=nginx-proxy

# Target API Services (for log collection)
TARGET_API_SERVICES=api-auth,api-management
