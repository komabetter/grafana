# Grafana Logging Stack Environment Configuration
# Copy this file to .env and customize the values as needed

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# Grafana Web Interface Port
GRAFANA_PORT=3100

# Loki API Port (internal communication)
LOKI_PORT=3101

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Grafana Security Settings
GRAFANA_ALLOW_SIGN_UP=false
GRAFANA_ANONYMOUS_ENABLED=false

# =============================================================================
# LOKI CONFIGURATION
# =============================================================================

# Loki Log Retention (examples: 24h, 7d, 30d)
LOKI_RETENTION_PERIOD=7d

# Loki Storage Path (relative to project root)
LOKI_DATA_PATH=./data/loki

# =============================================================================
# GRAFANA DATA CONFIGURATION
# =============================================================================

# Grafana Data Storage Path (relative to project root)
GRAFANA_DATA_PATH=./data/grafana

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Docker Network Name
LOGGING_NETWORK_NAME=grafana-logging-network

# =============================================================================
# CONTAINER CONFIGURATION
# =============================================================================

# Container restart policy (no, always, on-failure, unless-stopped)
RESTART_POLICY=unless-stopped

# Loki User ID (for file permissions)
LOKI_USER_ID=10001
LOKI_GROUP_ID=10001

# Grafana User ID (for file permissions)
GRAFANA_USER_ID=472
GRAFANA_GROUP_ID=472

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

# Health check intervals (in seconds)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40

# =============================================================================
# LOG COLLECTION CONFIGURATION
# =============================================================================

# Target API services for log collection (comma-separated container names)
TARGET_API_SERVICES=api-auth,api-management

# Log level filter (debug, info, warn, error)
LOG_LEVEL_FILTER=info